<div class="divExterior">
    <h1>Bienvenido al Carrito</h1>
    {{#if vacio}}
        {{#each carrito}}
            <div>
                <p>Imagen {{this.product.thumbnail}} </p>
                <h2>Nombre del producto: {{ this.product.title }}</h2>
                <p>Descripcion: {{ this.product.description }}</p>
                <h3>Precio: {{ this.product.price }}</h3>
                <p>stock: {{ this.product.stock }}</p>
                <p>Descripcion del producto: {{ this.product.description }}</p>
                <hr>
            </div>
        {{/each}}
    {{else}}
        <h2>No tienes productos</h2>
    {{/if}}
</div>